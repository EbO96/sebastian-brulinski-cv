<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base - No action bar. -->
    <style name="AppThemeNoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Launcher" parent="AppThemeNoActionBar">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <!-- my_toolbar toolbar style. -->
    <style name="MyToolbarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@color/whiteBackgroundTextColor</item>
        <item name="android:textColorPrimary">@color/whiteBackgroundTextColor</item>
        <item name="android:textColorSecondary">@color/whiteBackgroundTextColor</item>
    </style>

    <style name="MyToolbarTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/whiteBackgroundTextColor</item>
        <item name="android:textColorSecondary">@color/whiteBackgroundTextColor</item>
    </style>

    <style name="MyCardViewStyle" parent="Base.CardView">
        <item name="cardCornerRadius">@dimen/card_corners_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
    </style>

    <style name="MyFragmentRootLayoutStyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="MyStartFragmentCardTitle" parent="TextAppearance.AppCompat">
        <item name="android:textAlignment">gravity</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">36sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="WelcomeScreenTitleTextStyle">
        <item name="android:textColor">@color/darkBackgroundTextColor</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="WelcomeScreenContentTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/whiteBackgroundTextColor</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="PersonalInformationsStyle" parent="Base.V7.Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textAlignment">gravity</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:drawablePadding">1dp</item>
    </style>

    <style name="RootRecyclerStyle" parent="MyFragmentRootLayoutStyle">
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="PersonalInfoTextViewTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PersonalInfoTextViewStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/whiteBackgroundTextColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CareerItemCardStyle" parent="Base.CardView">
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="HeaderTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/whiteBackgroundTextColor</item>
    </style>

    <style name="SettingsScreenTextView" parent="TextAppearance.AppCompat">
        <item name="android:textAlignment">gravity</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextPlaceholder">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="TextPlaceholderDark" parent="TextPlaceholder">
        <item name="android:background">@color/textPlaceholder</item>
    </style>

    <style name="TextPlaceholderLight" parent="TextPlaceholder">
        <item name="android:background">@color/textPlaceholderLight</item>
    </style>

    <style name="TextPlaceholderAltDark" parent="TextPlaceholder">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="TextPlaceholderAltLight" parent="TextPlaceholder">
        <item name="android:background">@color/colorPrimary</item>
    </style>
</resources>
