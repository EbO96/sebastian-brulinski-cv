<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MyFragmentRootLayoutStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        style="@style/MyCardViewStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:elevation="4dp"
                android:padding="4dp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="@dimen/profile_size_card"
                app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/constraintLayout">

                <ImageView
                    android:id="@+id/profileImageView"
                    android:layout_width="@dimen/profile_size"
                    android:layout_height="@dimen/profile_size"
                    android:scaleType="centerCrop" />

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/bcgImageView"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:tint="@color/dimSoft"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/white"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/bcgImageView"
                app:layout_constraintStart_toStartOf="@+id/bcgImageView"
                app:layout_constraintTop_toBottomOf="@+id/bcgImageView">

                <TextView
                    android:id="@+id/nameAndSurnameTextView"
                    style="@style/PersonalInfoTitleTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="@dimen/profile_size_card"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/birthDateTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawableLeft="@drawable/ic_cake_24dp"
                    android:drawablePadding="8dp"
                    android:gravity="start|center_vertical"
                    android:padding="8dp"
                    android:textAlignment="gravity"
                    android:textColor="@color/whiteBackgroundTextColor"
                    android:textSize="14sp"
                    android:theme="@style/PersonalInfoTitleTextStyle"
                    app:layout_constraintBottom_toTopOf="@+id/phoneTextView"
                    app:layout_constraintStart_toStartOf="@+id/phoneTextView"
                    app:layout_constraintTop_toBottomOf="@+id/nameAndSurnameTextView"
                    app:layout_constraintVertical_bias="1.0" />

                <TextView
                    android:id="@+id/phoneTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_phone_24dp"
                    android:drawablePadding="8dp"
                    android:gravity="start|center_vertical"
                    android:padding="8dp"
                    android:textAlignment="gravity"
                    android:textColor="@color/whiteBackgroundTextColor"
                    android:textSize="14sp"
                    android:theme="@style/PersonalInfoTitleTextStyle"
                    app:layout_constraintBottom_toTopOf="@+id/cityNameTextView"
                    app:layout_constraintEnd_toEndOf="@+id/nameAndSurnameTextView"
                    app:layout_constraintStart_toStartOf="@+id/nameAndSurnameTextView"
                    app:layout_constraintTop_toBottomOf="@+id/nameAndSurnameTextView" />

                <TextView
                    android:id="@+id/emailTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_email_24dp"
                    android:drawablePadding="8dp"
                    android:gravity="start|center_vertical"
                    android:padding="8dp"
                    android:textAlignment="gravity"
                    android:textColor="@color/whiteBackgroundTextColor"
                    android:textSize="14sp"
                    android:theme="@style/PersonalInfoTitleTextStyle"
                    app:layout_constraintEnd_toEndOf="@+id/phoneTextView"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/phoneTextView"
                    app:layout_constraintTop_toBottomOf="@+id/phoneTextView" />

                <TextView
                    android:id="@+id/cityNameTextView"
                    style="@style/PersonalInfoTitleTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="-4dp"
                    app:layout_constraintBottom_toTopOf="@+id/provinceNameTextView"
                    app:layout_constraintEnd_toEndOf="@+id/emailTextView"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/emailTextView" />

                <TextView
                    android:id="@+id/ageTextView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center_vertical|start"
                    android:textAlignment="gravity"
                    android:textColor="@android:color/darker_gray"
                    app:layout_constraintBottom_toBottomOf="@+id/birthDateTextView"
                    app:layout_constraintEnd_toEndOf="@+id/phoneTextView"
                    app:layout_constraintStart_toEndOf="@+id/birthDateTextView"
                    app:layout_constraintTop_toTopOf="@+id/birthDateTextView" />

                <TextView
                    android:id="@+id/provinceNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:paddingTop="-4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/cityNameTextView"
                    app:layout_constraintStart_toStartOf="@+id/cityNameTextView" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

